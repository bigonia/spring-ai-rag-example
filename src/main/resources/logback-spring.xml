<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 定义日志格式 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{50} [%X{traceId:-},%X{spanId:-}] - %msg%n" />

    <!-- 控制台输出器 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 仅输出INFO及以上级别到控制台（可选） -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    </appender>

    <!-- 自定义包的日志配置 -->
<!--    <logger name="com.yourpackage" level="DEBUG" additivity="false">-->
<!--        &lt;!&ndash; 绑定到控制台输出器 &ndash;&gt;-->
<!--        <appender-ref ref="CONSOLE" />-->
<!--        &lt;!&ndash; 可添加文件输出器 &ndash;&gt;-->
<!--    </logger>-->

    <!-- 全局根日志 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>