<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
    <!-- 1. 核心配置参数（可根据需求调整） -->
    <!-- 日志文件根路径：Windows/Linux通用，优先读取系统环境变量，默认当前项目logs目录 -->
    <property name="LOG_BASE_PATH" value="${LOG_PATH:-./logs}" />
    <!-- 日志文件名前缀 -->
    <property name="LOG_FILE_NAME" value="app" />
    <!-- 日志格式（保留原有格式，新增文件路径适配） -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{50} [%X{traceId:-},%X{spanId:-}] - %msg%n" />
    <!-- 单文件最大大小（达到该大小触发滚动） -->
    <property name="LOG_MAX_FILE_SIZE" value="100MB" />
    <!-- 日志保留天数 -->
    <property name="LOG_MAX_HISTORY" value="30" />
    <!-- 日志总大小上限（超过后自动清理旧日志） -->
    <property name="LOG_TOTAL_SIZE_CAP" value="10GB" />

    <!-- 2. 控制台输出器（保留原有逻辑） -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    </appender>

    <!-- 3. 本地文件滚动输出器（核心新增） -->
    <appender name="FILE_ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 3.1 活跃日志文件路径（当前写入的日志文件） -->
        <file>${LOG_BASE_PATH}/${LOG_FILE_NAME}.log</file>
        <!-- 3.2 字符编码和格式 -->
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- 3.3 滚动策略：时间+大小双触发 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 滚动文件命名规则：按“天”分目录，按“大小”分文件，自动压缩为zip -->
            <!-- 示例：./logs/app-2025-12-09.0.log.zip（当天第0个超过100MB的日志） -->
            <fileNamePattern>${LOG_BASE_PATH}/${LOG_FILE_NAME}-%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>

            <!-- 时间维度：保留30天日志 -->
            <maxHistory>${LOG_MAX_HISTORY}</maxHistory>
            <!-- 总大小上限：防止日志占满磁盘 -->
            <totalSizeCap>${LOG_TOTAL_SIZE_CAP}</totalSizeCap>
            <!-- 启动时清理过期日志 -->
            <cleanHistoryOnStart>true</cleanHistoryOnStart>

            <!-- 大小维度：单文件超过100MB触发滚动 -->
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>${LOG_MAX_FILE_SIZE}</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>

        <!-- 可选：过滤日志级别（仅记录INFO及以上，和控制台保持一致） -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>

        <!-- 可选：文件追加模式（默认true，无需修改） -->
        <append>true</append>
    </appender>

    <!-- 4. 全局根日志：同时输出到控制台+文件 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE_ROLLING" /> <!-- 新增文件输出 -->
    </root>

    <!-- 可选：自定义包级别日志（比如给业务包单独设置DEBUG级别） -->
    <!-- <logger name="com.zwbd.dbcrawlerv4" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE_ROLLING" />
    </logger> -->
</configuration>